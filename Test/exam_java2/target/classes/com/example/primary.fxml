<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableCell?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController">
   <children>
      <Label text="Primary View" /> 
      <Label text="Player ID"/>
      <TextField fx:id="playerId" prefWidth="200"></TextField>
      <Label text="Player Name"/>
      <TextField fx:id="playerName" prefWidth="200"></TextField>
      <Label text="High Score"/>
      <TextField fx:id="highScore" prefWidth="200"></TextField>
      <Label text="Level"/>
      <TextField fx:id="level" prefWidth="200"></TextField>
      <Label text="National ID"/>
      <TextField fx:id="nationalId" prefWidth="200"></TextField>
      <TableView fx:id="playerTable" prefWidth="400" prefHeight="200">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="playerNameColumn" text="Player Name" />
                <TableColumn fx:id="highScoreColumn" text="High Score" />
                <TableColumn fx:id="levelColumn" text="Level" />
                <TableColumn fx:id="nationalIdColumn" text="National ID" />
            </columns>
        </TableView>
      <Button fx:id="primaryButton" text="Add Student" onAction="#switchToSecondary"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
