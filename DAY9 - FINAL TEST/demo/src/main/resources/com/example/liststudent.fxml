<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableCell?>

<VBox fx:id="root" alignment="TOP_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ListStudentController">
    <children>
        <HBox spacing="20.0">
            <children>
                <Button text="Add " onAction="#switchToPrimary" />
                <Button text="List " />
                <Button text="Find " onAction="#switchTo_deletestudent"/>
                <Button text="Update " onAction="#switchTo_updatestudent" />
            </children>
        </HBox>


        <Button text="Show all students" onAction="#showAllStudent" />


        <TableView fx:id="studentTable" prefWidth="400" prefHeight="200">
            <columns>
                <TableColumn fx:id="idColumn" text="PlayerId" />
                <TableColumn fx:id="firstNameColumn" text="PlayerName" />
                <TableColumn fx:id="lastNameColumn" text="HighScore" />
                <TableColumn fx:id="emailColumn" text="Level" />
                <TableColumn fx:id="idClassColumn" text="NationalName" />
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
