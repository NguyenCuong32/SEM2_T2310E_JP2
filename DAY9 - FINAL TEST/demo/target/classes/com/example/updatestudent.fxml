<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox fx:id="root" alignment="TOP_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.UpdateStudentController">
    <children>
        <HBox spacing="20.0">
            <children>
                <Button text="Add " onAction="#switchToPrimary" />
                <Button text="List " onAction="#switchTo_liststudent"/>
                <Button text="Delete " onAction="#switchTo_deletestudent"/>
                <Button text="Update " fx:id="button4" />
            </children>
        </HBox>

        <Label text="id của student muốn update" />
        <TextField fx:id="text_id"></TextField>
        <Label text="first_name" />
        <TextField fx:id="text_first_name"></TextField>
        <Label text="last_name" />
        <TextField fx:id="text_last_name"></TextField>
        <Label text="email" />
        <TextField fx:id="text_email"></TextField>
        <Label text="class_id" />
        <TextField fx:id="text_class_id"></TextField>
        <Button fx:id="primaryButton" text="Update Student" onAction="#updateStudent"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
